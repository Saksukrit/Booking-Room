<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:weightSum="1">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Create Booking"
            android:textSize="30dp"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/subject_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="bottom">

            <EditText
                android:id="@+id/ETsubject"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:hint="Subject"
                android:singleLine="true"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="5dp">

            <View
                android:id="@+id/view_subject"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#aaaaaa" />

            <View
                android:id="@+id/second_view_subject"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#E74C3C"
                android:visibility="invisible" />
        </FrameLayout>

        <android.support.v4.widget.Space
            android:layout_width="fill_parent"
            android:layout_height="22dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Meeting Type"
            android:textSize="18dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/meeting_type"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/problem"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="การประชุมเพื่อแก้ปัญหา" />

            <RadioButton
                android:id="@+id/brainstorming"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="การประชุมเพื่อระดมความคิด" />

            <RadioButton
                android:id="@+id/training"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="การประชุมเพื่อการฝึกอบรม" />
        </RadioGroup>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/detail_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="bottom">

            <EditText
                android:id="@+id/ETdetail"
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:layout_weight="0.02"
                android:background="#00000000"
                android:hint="Detail"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="5dp">

            <View
                android:id="@+id/view_detail"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#aaaaaa" />

            <View
                android:id="@+id/second_view_detail"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#E74C3C"
                android:visibility="invisible" />
        </FrameLayout>

        <android.support.v4.widget.Space
            android:layout_width="fill_parent"
            android:layout_height="21dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Date : "
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtdate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="unselected" />

            <Button
                android:id="@+id/btnsetDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set" />
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="fill_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.57"
                android:text="Time : "
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txttime"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="unselected" />

            <Button
                android:id="@+id/btnsetTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.57"
                android:text="To Time : "
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txttotime"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="unselected" />

            <Button
                android:id="@+id/btnsetToTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="set" />
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="fill_parent"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Participant"
            android:textSize="18dp"
            android:textStyle="bold" />

        <android.support.v4.widget.Space
            android:layout_width="fill_parent"
            android:layout_height="15dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="bottom">

            <EditText
                android:id="@+id/ETsearch"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:hint="search name"
                android:singleLine="true"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="5dp">

            <View
                android:id="@+id/view_search"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#aaaaaa" />

            <View
                android:id="@+id/second_view_search"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#E74C3C"
                android:visibility="invisible" />
        </FrameLayout>

        <android.support.v4.widget.Space
            android:layout_width="fill_parent"
            android:layout_height="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department"
            android:textSize="18dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/department_type"
            android:layout_width="fill_parent"
            android:layout_height="107dp">

            <RadioButton
                android:id="@+id/mobile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Mobile" />

            <RadioButton
                android:id="@+id/analyst"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Analyst" />

            <RadioButton
                android:id="@+id/business"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Business" />
        </RadioGroup>

        <android.support.v4.widget.Space
            android:layout_width="fill_parent"
            android:layout_height="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name list"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/namelist"
            android:layout_width="fill_parent"
            android:layout_height="187dp"
            android:layout_weight="0.98">

        </ListView>

        <Button
            android:id="@+id/btnsubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="submit" />

    </LinearLayout>
</ScrollView>